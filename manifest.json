{
  "manifest_version": 3,
  "name": "Water Reminder",
  "version": "1.2.0",
  "description": "Reminds you to drink water at user-defined intervals with jokes and health tips",
  "permissions": ["alarms", "notifications", "storage"],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png",
    "16": "icon16.png",
    "32": "icon32.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}